	email = michi.zoech@gmail.com
	name = Michael Zoech
[init]
	defaultBranch = main
[diff]
	algorithm = histogram
	colorMoved = plain
	mnemonicPrefix = true
	renames = true
[push]
	autoSetupRemote = true
[fetch]
	prune = true
	pruneTags = true
	all = true
[help]
	autocorrect = prompt
[column]
	ui = auto
[branch]
	sort = -committerdate
[tag]
	sort = version:refname
[rebase]
	autoSquash = true
